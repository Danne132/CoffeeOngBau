<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.an.CoffeeOngBau.Controller.HomeController">
    <!-- Header -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #4E342E; -fx-padding: 10;">
            <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 20px;" text="☕ Quản Lý Cafe Ông Bầu" />
            <Region HBox.hgrow="ALWAYS" />
            <MenuBar>	
                <Menu text="Trang chủ" />
                <Menu text="Quản lý đơn hàng" />
                <Menu text="Quản lý nhân viên" />
                <Menu text="Thống kê doanh thu" />
                <Menu text="Cài đặt" />
            </MenuBar>
        </HBox>
    </top>

    <!-- Sidebar -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #D7CCC8; -fx-padding: 15;">
            <Button style="-fx-font-size: 14px;" text="➕ Thêm món" />
            <Button style="-fx-font-size: 14px;" text="📋 Thêm hóa đơn" />
            <Button style="-fx-font-size: 14px;" text="📝 Danh sách sản phẩm" />
            <Button style="-fx-font-size: 14px;" text="📊 Báo cáo hàng tồn" />
        </VBox>
    </left>

    <!-- Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Thống kê nhanh -->
            <HBox spacing="15">
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #F5F5F5; -fx-padding: 15; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-border-width: 1;">
                    <Label style="-fx-font-size: 16px;" text="Tổng đơn hàng" />
                    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="15" />
                </VBox>
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #F5F5F5; -fx-padding: 15; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-border-width: 1;">
                    <Label style="-fx-font-size: 16px;" text="Doanh thu hôm nay" />
                    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="2,500,000 VNĐ" />
                </VBox>
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #F5F5F5; -fx-padding: 15; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-border-width: 1;">
                    <Label style="-fx-font-size: 16px;" text="Món bán chạy" />
                    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Latte" />
                </VBox>
            </HBox>

            <!-- Danh sách hóa đơn -->
            <TableView>
                <columns>
                    <TableColumn text="ID Đơn hàng" />
                    <TableColumn text="Thời gian" />
                    <TableColumn text="Tổng tiền" />
                    <TableColumn text="Trạng thái" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #4E342E; -fx-padding: 10;">
            <Label style="-fx-text-fill: #FFFFFF;" text="📞 Hotline: 0123 456 789" />
        </HBox>
    </bottom>
</BorderPane>
