<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171">
    <!-- Header -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #4E342E; -fx-padding: 10;">
            <Label text="Quản Lý Nhân Viên" style="-fx-text-fill: #FFFFFF; -fx-font-size: 20px;" />
        </HBox>
    </top>

    <!-- Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Form thông tin nhân viên -->
            <GridPane hgap="10" vgap="10" style="-fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-width: 1;">
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Tên NV:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="tenNVField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Chức Vụ:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="chucVuField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="SĐT:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="sdtField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="2" />
                <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="3" />

                <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="2" />
                <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="3" />

                <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="2" />
                <TextField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="3" />

                <Label text="ID Card:" GridPane.rowIndex="3" GridPane.columnIndex="2" />
                <TextField fx:id="idCardField" GridPane.rowIndex="3" GridPane.columnIndex="3" />

                <Label text="Ngày Tạo:" GridPane.rowIndex="0" GridPane.columnIndex="4" />
                <TextField fx:id="createAtField" GridPane.rowIndex="0" GridPane.columnIndex="5" />

                <Label text="Ngày Cập Nhật:" GridPane.rowIndex="1" GridPane.columnIndex="4" />
                <TextField fx:id="updatedAtField" GridPane.rowIndex="1" GridPane.columnIndex="5" />

                <Label text="Đang Làm Việc:" GridPane.rowIndex="2" GridPane.columnIndex="4" />
                <CheckBox fx:id="isWorkingCheckBox" GridPane.rowIndex="2" GridPane.columnIndex="5" />
            </GridPane>

            <!-- Các nút chức năng -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Thêm" fx:id="addButton" />
                <Button text="Xóa" fx:id="deleteButton" />
                <Button text="Sửa" fx:id="editButton" />
            </HBox>

            <!-- Bảng danh sách nhân viên -->
            <TableView fx:id="employeeTable">
                <columns>
                    <TableColumn text="ID" fx:id="idColumn" />
                    <TableColumn text="Tên NV" fx:id="tenNVColumn" />
                    <TableColumn text="Chức Vụ" fx:id="chucVuColumn" />
                    <TableColumn text="SĐT" fx:id="sdtColumn" />
                    <TableColumn text="Email" fx:id="emailColumn" />
                    <TableColumn text="Username" fx:id="usernameColumn" />
                    <TableColumn text="Password" fx:id="passwordColumn" />
                    <TableColumn text="ID Card" fx:id="idCardColumn" />
                    <TableColumn text="Ngày Tạo" fx:id="createAtColumn" />
                    <TableColumn text="Ngày Cập Nhật" fx:id="updatedAtColumn" />
                    <TableColumn text="Đang Làm Việc" fx:id="isWorkingColumn" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #4E342E; -fx-padding: 10;">
        </HBox>
    </bottom>
</BorderPane>
